<script type="text/javascript">

    $("#buttonStap1").click(function () {
        $("#stap1").addClass('hide');
        $("#stap2").removeClass('hide');
        
    });

    $("#buttonStap2").click(function () {
        $("#stap2").addClass('hide');
        $("#stap3").removeClass('hide');
        $("#navBewijs").removeClass('hide');

    });

</script>